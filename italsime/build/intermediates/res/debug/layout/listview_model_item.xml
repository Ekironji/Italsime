<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView
 		android:id="@+id/textView_model_name"
        style="@android:attr/textAppearanceLarge"
        android:paddingTop="20dip"
        android:paddingBottom="20dip"
        android:layout_marginLeft="20dip"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_vertical" />

    <TextView
        android:id="@+id/textView_kw_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/kw_string"
        android:paddingTop="20dip"
        android:paddingBottom="20dip"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/textView_kw_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView_model_name"
        android:layout_alignBottom="@+id/textView_model_name"
        android:layout_toRightOf="@+id/textView_kw_string"
        android:paddingTop="20dip"
        android:paddingBottom="20dip"
	    android:text="@string/dummy_no_value" />
    
    <TextView 
        android:id="@+id/textView_rpm_string"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView_model_name"
        android:layout_alignBottom="@+id/textView_model_name"
        android:layout_toLeftOf="@+id/textView_rpm_value"
        android:paddingTop="20dip"
        android:paddingBottom="20dip"
        android:text="@string/rpm_string" />

    <TextView
        android:id="@+id/textView_rpm_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView_model_name"
        android:layout_alignBottom="@+id/textView_model_name"
        android:layout_alignParentRight="true"
        android:paddingTop="20dip"
        android:paddingBottom="20dip"
        android:layout_marginRight="15dip"
        android:text="@string/dummy_no_value" />

</RelativeLayout>
