<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageButton
        android:id="@+id/imageButtonAriaPulita"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:src="@drawable/ariapulita_menu"
        android:scaleType="centerInside"
        android:contentDescription="@string/imagedescriptor_ariapulitabutton" />

    <ImageButton
        android:id="@+id/imageButtonAriaSporca"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:src="@drawable/ariasporca_menu"
        android:scaleType="centerInside"
        android:contentDescription="@string/imagedescriptor_ariasporcabutton" />

</LinearLayout>
